<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#fff"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/noimage"
                android:tint="#dddddd"
                android:layout_centerHorizontal="true"
                android:id="@+id/adapter_item_icon"
                android:layout_margin="12dp"
                android:transitionName="product_image"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapter_item_icon"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#f5f5f5"
                    android:padding="6dp"></View>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pen"
                        android:textSize="16sp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:transitionName="product_name"
                        android:layout_marginRight="32dp"
                        android:id="@+id/adapter_item_title"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs: 50"
                        android:id="@+id/adapter_item_cost"
                        android:paddingLeft="6dp"
                        android:paddingTop="3dp"
                        android:transitionName="product_price"
                        android:layout_below="@+id/adapter_item_title"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="12dp"
                        android:tint="#ddd"
                        android:id="@+id/adapter_item_quantity"
                        />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>