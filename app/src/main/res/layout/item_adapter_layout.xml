<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:src="@drawable/noimage"
        android:tint="#dddddd"
     android:id="@+id/adapter_item_icon"
        android:paddingRight="6dp"
        android:layout_alignParentLeft="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/adapter_item_title"
        android:layout_toRightOf="@+id/adapter_item_icon"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs: 50"
        android:textStyle="bold"
        android:id="@+id/adapter_item_cost"

         android:layout_below="@+id/adapter_item_title"
        android:layout_toRightOf="@+id/adapter_item_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 kg"
        android:layout_marginLeft="24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/adapter_item_quantity"
        android:layout_alignParentBottom="true"
          />


</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:background="#f5f5f5"
    >

</View>

</LinearLayout>