<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

  <!-- date and time layout start  -->
  <LinearLayout
      android:id="@+id/date_and_time_chat_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      android:layout_marginLeft="32dp"
      android:layout_marginRight="32dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"
      android:visibility="gone"
      >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">
      <TextView
          android:id="@+id/date_and_time_bubble"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:alpha="0.7"
          android:gravity="center"
          android:padding="6dp"
          android:text="12 Jan 2014"
          android:textColor="#fff"
          />
    </android.support.v7.widget.CardView>
  </LinearLayout>




  <android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="#ffffff"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="12dp"
      android:id="@+id/message_layout_left">
    <com.vanniktech.emoji.EmojiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/message_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_time_left"
        android:text="2017-11-11"
        android:textSize="10sp"
        android:layout_gravity="right"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorPrimary"/>
  </LinearLayout>
</android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="6dp"
      app:cardUseCompatPadding="true"
      app:cardBackgroundColor="@color/colorPrimary"
      android:layout_gravity="right"
    android:background="@color/colorPrimary"
      >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="12dp"
      android:id="@+id/message_layout_right">
    <com.vanniktech.emoji.EmojiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="#fff"
        android:textSize="16sp"
        android:id="@+id/message_right"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_time_right"
        android:textColor="#fff"
        android:text="2017-11-11"
        android:layout_gravity="right"
        android:layout_marginLeft="32dp"
        android:textSize="10sp" />
  </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>
