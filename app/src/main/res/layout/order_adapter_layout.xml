<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ddd"
    android:gravity="center_vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="#FFF">

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/adapter_order_status"
        android:visibility="gone"
        ></View>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
      >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        xmlns:android="http://schemas.android.com/apk/res/android">



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/noimage"
            android:tint="#dddddd"
            android:id="@+id/adapter_order_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/adapter_order_icon"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pen"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:textColor="#323232"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/adapter_order_title"
                android:layout_toRightOf="@+id/adapter_item_icon"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>
    </RelativeLayout>


       <View android:layout_width="match_parent"
           android:layout_height="0.6dp"
           android:background="#f5f5f5"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                android:padding="4dp"
                />
            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="6"
               android:textSize="14sp"
               android:textColor="@color/text_color"
               android:singleLine="true"
               android:ellipsize="end"
                android:gravity="center"
               android:id="@+id/adapter_order_quantity"
               android:layout_weight="1"
                android:padding="4dp"

                />
        </LinearLayout>
       <View android:layout_width="match_parent"
           android:layout_height="0.6dp"
           android:background="#f5f5f5"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           ></View>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="12dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Price"
               android:textSize="14sp"
               android:textColor="@color/text_color"
               android:singleLine="true"
               android:ellipsize="end"
               android:layout_weight="1"
               android:padding="4dp"

               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="100"
               android:textSize="14sp"
               android:textColor="@color/text_color"
               android:layout_weight="1"
               android:singleLine="true"
               android:gravity="center"
               android:ellipsize="end"
               android:id="@+id/adapter_order_price"
               android:padding="4dp"

               />
       </LinearLayout>
       <View android:layout_width="match_parent"
           android:layout_height="0.6dp"
           android:background="#f5f5f5"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Address :"
           android:textSize="14sp"
           android:textColor="@color/text_color"
           android:layout_weight="1"
           android:singleLine="true"
           android:ellipsize="end"
           android:padding="4dp"

           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyderbad"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/adapter_order_address"
            android:padding="4dp"

            />

    </LinearLayout>

       <View android:layout_width="match_parent"
           android:layout_height="0.6dp"
           android:background="#f5f5f5"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           ></View>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="12dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Door No :"
               android:textSize="14sp"
               android:textColor="@color/text_color"
               android:layout_weight="1"
               android:singleLine="true"
               android:ellipsize="end"
               android:padding="4dp"

               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="124"
               android:textSize="12sp"
               android:textColor="@color/text_color"
               android:layout_weight="1"
               android:ellipsize="end"
               android:gravity="center"
               android:id="@+id/adapter_order_door_number"
               android:padding="4dp"

               />

       </LinearLayout>




       <View android:layout_width="match_parent"
           android:layout_height="0.6dp"
           android:background="#f5f5f5"
           android:layout_marginTop="4dp"
           android:layout_marginBottom="4dp"
           ></View>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="12dp">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Phone"
               android:textSize="14sp"
               android:textColor="@color/text_color"
               android:singleLine="true"
               android:ellipsize="end"
               android:layout_weight="1"
               android:padding="4dp"

               />


           <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="+91 7095362286"
           android:textSize="14sp"
           android:textColor="@color/text_color"
           android:layout_weight="1"
           android:singleLine="true"
           android:ellipsize="end"
               android:gravity="center"
               android:padding="4dp"
               android:id="@+id/adapter_order_phone"
           />

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#FFF59D"
           android:layout_marginTop="6dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Your order sent,they will process slowly "
               android:padding="12dp"/>
       </LinearLayout>

       <!--
           <View
               android:layout_width="match_parent"
               android:layout_height="12dp"
               android:id="@+id/adapter_order_status"
               android:background="@color/colorPrimary"></View>
       -->

   </LinearLayout>
   </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
